<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.randy.herome.Fragmant.CharacterBioFragment"
    android:background="@drawable/hero_bg_gradient">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:weightSum="1">
        >

        <EditText
            android:text="SUPERMAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:elevation="1dp"
            android:textColor="#FAC740"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_weight="0.18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="BACKSTORY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="0.18"
                android:layout_centerInParent="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/big_superman_logo"
                android:id="@+id/imageView2"
                android:paddingLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Superman has the abiltity to fly.  He got his powers by birth and his mother raised him to be a good person.  He has super strength and he can fly.  He wears tights and has a red cape.  Superman is very fast and cannot be shot by bullets.  His weakness is Kryptonite found on his home planet Krypton."
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </RelativeLayout>

        <TextView
            android:text="PRIMARY POWER GOTTEN BY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp" />

        <Button
            android:text="Came By Accident"
            android:layout_height="wrap_content"
            android:id="@+id/primarypowerbtnview"
            android:layout_width="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/hero_button"
            android:textColor="#FAC740"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/lightning"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:text="PRIMARY POWER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp" />

        <Button
            android:text="Gentetic Mutation"
            android:layout_height="wrap_content"
            android:id="@+id/secondarypowerbtnview"
            android:layout_width="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/hero_button"
            android:textColor="#FAC740"
            android:drawableLeft="@drawable/atomic"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <Button
            android:text="Start Over"
            android:layout_height="wrap_content"
            android:id="@+id/startoverbtn"
            android:layout_width="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/hero_solid_button"
            android:textColor="#10161D"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:backgroundTint="#FAC740"
            android:textColorHint="#10161d"
            android:textSize="24sp" />

    </LinearLayout>
</FrameLayout>
